{% extends "RPPDbRieselBundle::base.html.twig" %}

{% block title %}
{{ k.num }}*2^n-1
{% endblock title %}

{% block header %}
{{ k.num }}&middot;2<sup><i>n</i></sup>-1
{% endblock header %}

{% block content %}
<p><a href="{{ path('_riesel_edit_k', {'k': k.id}) }}">[Edit]</a></p>
<table class="table1">
<thead>
<tr>
<th><i>k</i></th>
<th>Reserved<br>Last editor</th>
<th>Last Update</th>
<th>#<i>n</i></th>
<th>Nash weight</th>
<th>max <i>n</i>/<br>range tested</th>
<th>{{ k.num }}&middot;2<sup><i>n</i></sup>-1 is prime for the following <i>n</i>'s</th>
</tr>
</thead>
<tbody>
{{ render_esi(controller('RPPDbRieselBundle:Display:kdetail', {
        'k': k.id
    })) }}
</tbody>
</table>

<h2>Prime data</h2>

<table class="table1">
<thead>
<tr>
<th>#</th>
<th><i>n</i></th>
<th>Prime Pages entry</th>
<th>Woodall</th>
<th>Twin</th>
<th>Sophie Germain</th>
<th>Comment</th>
<th>Proven</th>
<th>Primality tested by</th>
<th>Twin tested by</th>
<th>Found by</th>
<th>Found on</th>
</tr>
</thead>
<tbody>
{% for prime in k.primes %}
<tr>
<td>{{ loop.index }}</td>
<td>{{ prime.n }}</td>
<td>{% if prime.utm %}<a href="javascript:utm({{ prime.utm }})">{{ prime.utm }}</a>{% endif %}</td>
<td>{% if prime.woodall %}{{ prime.woodall }}&middot;2<sup>{{ prime.woodall }}</sup>-1{% endif %}</td>
<td>{{ prime.isTwin ? "Yes" : "" }}</td>
<td>{{ prime.isSG ? "Yes" : "" }}</td>
<td>{{ prime.comment|raw }}</td>
{% if prime.utm %}
<td colspan="2">Prime Pages</td>
{% else %}
<td>{{ prime.isProvenPrime ? "Yes" : "" }}</td>
<td>{{ prime.testedPrime ?: "N/A" }}</td>
{% endif %}
<td>{% if prime.isTwin %}{{ prime.testedTwin ?: "N/A" }}{% endif %}</td>
<td>{{ prime.foundBy ? prime.foundBy.name }}</td>
<td>{{ prime.foundOn is empty ? "" : prime.foundOn|date("Y-m-d") }}</td>
</tr>
{% endfor %}
</tbody>
</table>
{% endblock content %}
